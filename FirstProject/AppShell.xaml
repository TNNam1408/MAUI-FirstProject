<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FirstProject.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FirstProject"
    Shell.FlyoutBehavior="Locked"
    Shell.TabBarIsVisible="False"
    Shell.NavBarIsVisible="False"
    FlyoutBackgroundColor="Transparent"
    >

    <Shell.FlyoutHeader>
        <Image
            Source="dotnet_bot.png"
            />
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Home" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"/>

        <ShellContent
        Title="ContactUs"
        ContentTemplate="{DataTemplate local:ContactUs}"
        Route="ContactUs"
        />

        <ShellContent
        Title="AboutUs"
        ContentTemplate="{DataTemplate local:AboutUs}"
        Route="AboutUs"
        />
    </FlyoutItem>
</Shell>

